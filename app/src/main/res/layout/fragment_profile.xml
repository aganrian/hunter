<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlToolbarTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/ic_person"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/putih"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/_20sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/colorWhite"
                    />

                <TextView
                    android:id="@+id/noHp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/colorWhite"/>

                <Button
                    android:id="@+id/btnBatalManual"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/keluar"
                    android:textStyle="bold"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:background="@drawable/border_rounded_white"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menuProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@id/rlToolbarTop"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp">

        <ImageView android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_profille"/>

        <TextView
            android:id="@+id/menuProfileText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:text="@string/profile"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/colorBlack"/>

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_blue"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@id/menuProfile"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp">

        <ImageView android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_alamat"/>

        <TextView
            android:id="@+id/menuAlamatTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:text="@string/alamat"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/colorBlack"/>

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_blue"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/menuHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@id/menuAlamat"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp">

        <ImageView android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_help"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:text="Help"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/colorBlack"/>

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_blue"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuKebijakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@id/menuHelp"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp">

        <ImageView android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_kebijakan"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:text="Kebijakan Privasi"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/colorBlack"/>

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_blue"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuRules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@id/menuKebijakan"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp">

        <ImageView android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_rules"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:text="@string/aturan_pengguna"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/colorBlack"/>

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_blue"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuAplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@id/menuRules"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp">

        <ImageView android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_application"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:text="Versi Aplikasi"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/colorBlack"/>

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_blue"/>

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/ly_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cc1c1c1c"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iv_progress_image"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_gravity="center"
            android:src="@drawable/img_anim_loading"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


</RelativeLayout>