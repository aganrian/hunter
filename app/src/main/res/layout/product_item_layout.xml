<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:contentPadding="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/imageProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_person" />

        <LinearLayout
            android:id="@+id/lyBottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageProduk"
            android:weightSum="1"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/lyBottom"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/titleVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ItemName"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/font_normal"
                    android:textColor="#444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titlePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorRedTranparant"
                    android:layout_below="@id/titleVoucher"
                    android:layout_marginBottom="5dp"
                    android:text="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnReddem"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:background="@drawable/border_rounded_blue">
                <TextView
                    android:id="@+id/textButtonReddem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/_8ssp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/colorWhite"
                    android:layout_marginBottom="5dp"
                    android:text="@string/redeem" />
            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>



</androidx.cardview.widget.CardView>